@model DiabetesHelperUser.Models.ViewModels
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    @using (Html.BeginForm("GenerateMenu", "Home", FormMethod.Post))
    {
        <p>Number Of Meals: </p> @Html.TextBox("NumberOfMeals") <input id="generate" type="submit" value="Generate Menu" />
        <label class="alert-danger">@Html.DisplayFor(model => model.ErrorMessage)</label>
        <table id="tblMenu" class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name Of Meal</th>
                    <th scope="col">Good Name</th>
                    @*<th scope="col">Energy In kcal</th>*@
                    <th scope="col">Measuring Unit</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.NumberOfMeals; i++)
                {
                    <tr>
                        <td scope="row" id="txtMealName">
                            @Model.MealNames[i].Name <input type="checkbox" checked />
                        </td>

                        <td scope="row">
                            <p id="txtCarbs" style="margin-bottom:0;">
                                Carbs: @Model.Carbs[i].Name <input type="checkbox" checked />
                            </p>

                            <p id="txtFats" style="margin : 0; padding-top:0;">
                                Fats: @Model.Fats[i].Name <input type="checkbox" checked />
                            </p>

                            <p id="txtProteins" style="margin : 0; padding-top:0;">
                                Proteins: @Model.Proteins[i].Name <input type="checkbox" checked />
                            </p>
                        </td>

                        <td scope="row">
                            <p id="txtMeasuringUnitCarb" style="margin-bottom:0;">
                                @Model.MeasuringUnitCarb[i].Name
                            </p>
                            <p id="txtMeasuringUnitFat" style="margin : 0; padding-top:0;">
                                @Model.MeasuringUnitFat[i].Name
                            </p>
                            <p id="txtMeasuringUnitProtein" style="margin : 0; padding-top:0;">
                                @Model.MeasuringUnitProtein[i].Name
                            </p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @*@using (Html.BeginForm("SaveMenu", "Home", FormMethod.Post))
    {
        <p>Number Of Meals: </p> @Html.TextBox("DateCreated") <input id="btnSaveMenu" type="submit" value="Save Menu" />
        <label class="success">@Html.DisplayFor(model => model.ErrorMessage)</label>
    }*@


</body>
</html>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
