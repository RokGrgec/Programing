@model IEnumerable<PPPK_Project.Models.Driver>

@{
    ViewBag.Title = "AllDrivers";
}

<h2>AllDrivers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DriverLicenceNumber)
        </th>
        <th></th>
    </tr>

@foreach (PPPK_Project.Models.Driver d in Model) {
    using (Html.BeginForm("Delete", "Driver", new { id = d.DriverID }))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => d.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => d.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => d.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => d.DriverLicenceNumber)
            </td>
            <td>
                <div onclick="window.location.href= '@Url.Action("Driver", "Driver", new { id = d.DriverID })'" class="btn btn-success">Edit</div>
                <input type="submit" value="Delete" />
            </td>
        </tr>
    }
}

</table>
<p>
    <div onclick="window.location.href= '@Url.Action("InsertDriver", "Driver")'" class="btn btn-primary">Insert new</div>
    <div onclick="window.location.href= '@Url.Action("Index","Home")'" class="btn btn-primary">Back to home</div>
</p>
