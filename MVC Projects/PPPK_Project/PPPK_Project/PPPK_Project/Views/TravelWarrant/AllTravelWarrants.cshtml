
@model List<PPPK_Project.Models.TravelWarrantCS>
@{
    ViewBag.Title = "AllTravelWarrants";
}

<h2>AllTravelWarrants</h2>


<div class="center">

    <ul>
        @foreach (PPPK_Project.Models.TravelWarrantCS tv in @Model)
        {
            <li>
                <div class="vozac_container">
                    <div class="row">
                        <div class="col-10">
                            <div class="row">
                                <div class="col tv_item">
                                    Date Created: @tv.travelWarrant.DateCreated
                                </div>
                                <div class="col tv_item">
                                    Starting date: @tv.travelWarrant.StartingDate
                                </div>
                                <div class="w-100"></div>
                                <div class="col tv_item">
                                    Ending date: @tv.travelWarrant.EndingDate
                                </div>
                                <div class="col tv_item">
                                    Driver name: @tv.driver.Name
                                </div>
                                <div class="col tv_item">
                                    Driver licence number: @tv.driver.DriverLicenceNumber
                                </div>
                                <div class="col tv_item">
                                    Status: @tv.status.StatusType
                                </div>
                                <div class="col tv_item">
                                    Status: @tv.vehicle.VehicleType | @tv.vehicle.VehicleBrand | @tv.vehicle.VehicleID
                                </div>
                            </div>
                        </div>
                        <div class="col-2 text-center align-self-center">
                            <div onclick="window.location.href= '@Url.Action("TravelWarrant", "TravelWarrant", new { id = tv.travelWarrant.TravelWarrantID })'" class="btn btn-success">Uredi</div>
                            <form name="f" method="post" action="/api/v1/vozac/@tv.travelWarrant.TravelWarrantID">
                                <button type="submit" class="btn btn-danger">Obrisi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </li>
        }
        <div onclick="window.location.href= '@Url.Action("DodajVozaca", "Vozaci")'" class="btn btn-primary">Dodaj novog vozaca</div>
    </ul>
</div>



